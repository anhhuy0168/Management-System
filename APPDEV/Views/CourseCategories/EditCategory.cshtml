@model APPDEV.Models.CourseCategory
@{
    ViewBag.Title = "EditCategory";
}

<div class="page-header">
    <h2 style="margin-bottom: 15px">Edit Category</h2>
</div>

@using (Html.BeginForm("EditCategory", "CourseCategories", FormMethod.Post))
{
    @Html.ValidationSummary(false, "", new { @class = "text-danger" })
    <div class="form-group">
        <label>Name</label>
        @Html.TextBoxFor(n => n.Name, "", new { @class = "form-control" })
    </div>
    <div class="form-group">
        <label>Description</label>
        @Html.TextBoxFor(d => d.Description, "", new { @class = "form-control" })
    </div>
    <button type="submit" class="btn btn-primary">Edit</button>
}

<div class="form-group" style="margin-top: 45px">
    @Html.ActionLink("Back to Course Category List", "Index", "CourseCategories", new { @class = "btn btn-success" })
</div>