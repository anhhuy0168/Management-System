@model APPDEV.Models.Trainer
@{
    ViewBag.Title = "Edit Trainer";
}

<h2>Edit profile</h2>

@using (Html.BeginForm("Edit", "Trainers", FormMethod.Post))
{
    @Html.HiddenFor(m => m.TrainerId)
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <div class="form-group">
        @Html.LabelFor(u => u.FullName)
        @Html.EditorFor(u => u.FullName, new { htmlAttributes = new { @class = "form-control" } })
    </div>
    <div class="form-group">
        @Html.LabelFor(u => u.Age)
        @Html.EditorFor(u => u.Age, new { htmlAttributes = new { @class = "form-control" } })
    </div>
    <div class="form-group">
        @Html.LabelFor(u => u.Address)
        @Html.EditorFor(u => u.Address, new { htmlAttributes = new { @class = "form-control" } })
    </div>
    <div class="form-group">
        @Html.LabelFor(u => u.Specialty)
        @Html.EditorFor(u => u.Specialty, new { htmlAttributes = new { @class = "form-control" } })
    </div>
    <button type="submit" class="btn btn-primary">Edit</button>
}